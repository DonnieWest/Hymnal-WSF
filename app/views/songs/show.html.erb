<div class="container">
  <div class="row">
    <%= link_to "Previous", {:controller => "songs", :action => "show", :page => (@song.page - 1)}, :class => 'btn' %>
    Song
    <%= link_to "Previous", {:controller => "songs", :action => "show", :page => (@song.page + 1)}, :class => 'btn' %>
  </div>
  <div class="row">
    <p id="notice"><%= notice %></p>
  </div>
  <div class="row">
    <h1><%= @song.title %></h1>
  </div>
  <div class="row">
    <div class="col-md-4 col-xm-4 col-sm-4">
      <%= raw @song.text %>
    </div>
  </div>
  <div class="row">
    <%= link_to 'Edit', edit_song_path(@song) %> |
    <%= link_to 'Back', songs_path, :class => 'btn btn-primary' %>
  </div>
  <div class="row">
    <div class="pull-right">Page <%= @song.page %></div>
  </div>
</div>
