<div class="row spacer text-center">
  <div class="row">
    <%= link_to "Previous Song", {:controller => "songs", :action => "show", :page => (@song.page - 1)}, :class => 'btn btn-default' %>
    <%= link_to "Next Song", {:controller => "songs", :action => "show", :page => (@song.page + 1)}, :class => 'btn btn-default' %>
  </div>
  <h4 class="pull-right">Page <%= @song.page %></h4>
  <p id="notice"><%= notice %></p>
  <div class="row">
    <%= render partial: 'songs/song', locals: {song: @song} %>
  </div>
  <div class="container spacer">
    <div class="btn-group">
      <%= link_to 'Edit', edit_song_path(@song), :class => 'btn btn-warning' %>
      <%= link_to 'Back', songs_path, :class => 'btn btn-primary' %>
    </div>
  </div>
</div>
<div class="row spacer"></div>
