<h1>Songs</h1>

<table class="table table-condensed table-hover">
  <thead>
  <tr>
    <th>#</th>
    <th>Song Title</th>
  </tr>
  </thead>

  <tbody>
  <% @songs.each do |song| %>
      <tr>
        <td class="col-xs-1"><%= song.page %></td>
        <td class="col-xs-8"><%= link_to song.title, song, :class => 'btn form-control btn-default' %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<div class="row">
  <nav class="navbar navbar-default navbar-fixed-bottom" role="navigation">
    <%= link_to 'New Song', new_song_path, :class => 'btn btn-primary' %>
  </nav>
</div>
