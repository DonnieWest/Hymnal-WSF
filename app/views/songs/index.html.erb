<div class="container">
    <h1>Songs</h1>

    <table class="table table-condensed table-hover">
      <thead>
        <tr>
          <th>Page</th>
          <th>Title</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @songs.each do |song| %>
          <tr>
            <td class="col-xs-1"><%= song.page %></td>
            <td class="col-xs-10"><%= link_to song.title, song, :class => 'btn form-control btn-default' %></td>
            <td class="col-xs-1"><%= link_to 'Edit', edit_song_path(song), :class => 'btn' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Song', new_song_path %>
</div>