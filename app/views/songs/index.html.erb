<h3>Wellspring Fellowship Songs</h3>
<div class="row-fluid">
  <%= form_tag(songs_path, :method => "get", class: "navbar-form", id: "search-form") do %>
      <div class="icon-addon addon-md">
        <%= text_field_tag :search, params[:search], class: "form-control clearable", placeholder: "Search Songs by Title" %>
        <label for="email" class="fa fa-search" rel="tooltip" title="title"></label>
      </div>
  <% end %>
</div>
<div class="row">
  <table class="table table-condensed table-hover">
    <thead>
    <tr>
      <th>#</th>
      <th>Song Title</th>
      <th>Writer</th>
    </tr>
    </thead>

    <tbody>
    <% @songs.each do |song| %>
        <tr>
          <td class="col-xs-1"><%= song.page %></td>
          <td class="col-xs-9"><%= link_to song.title, song, :class => 'form-control song-title', :data => {:toggle => 'modal', :target => '#myModal', :remote => true} %></td>
          <td class="col-xs-2"><%= song.writer.name unless song.writer.nil?%></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
